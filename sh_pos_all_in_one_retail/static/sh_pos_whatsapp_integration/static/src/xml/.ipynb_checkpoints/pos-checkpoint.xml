<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('client-details-right')]/div[hasclass('client-detail')]" position="after">
            <div class="client-detail">
              	<input class='detail client-mobile' placeholder="Mobile" name='mobile' type='tel' t-on-change="captureChange" t-att-value='props.partner.mobile || ""'></input>
            </div>
        </xpath>
    </t>
    <t t-extend="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension">
        <xpath expr="//table[hasclass('client-list')]/thead/tr" position="replace">
            <tr>
                <th>Nombre</th>
                <th t-if="!env.isMobile">Direccion</th>
                <th>Telefono</th>
                <th t-if="env.isMobile">CP</th>
                <th>Email</th>
                <t t-if="env.pos.config.sh_enable_customer_discount">
                	<th>Descuento</th>
                </t>
                <th>Puntos</th>
                <th>Mobil</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </xpath>
    </t>

    <t t-name="WhatsappMessagePopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-text popup-lg product-configurator-popup sh_whatsapp_popup">
                <header class="title">
                    Abarrotes San Luis
                </header>
                <div class="main-body touch-scrollable scrollable-y" style="padding: 20px;">
                	<div class="sh_whatsapp_number">
	                    <div style="margin-right: 15px;"><label class="sh_wp_number_lbl">Numero de Whatsapp : </label></div>
	                    <div><input readonly="" type="text" class="mobile_no" t-att-value="props.mobile_no" name="mobile_no" style="font-size: 15px;" /></div>
                	</div>
					<div class="sh_whatsapp_msg">
	                    <div class="sh_msg_div"><label class="sh_wp_msg_lbl">Mensaje : </label></div>
	                    <div>
		                    <textarea placeholder="Enter Message Here.." class="wp_message" t-att-value="props.message" name="message" />
	                    </div>
                    </div>

                    <a class="wp_url" target="blank" href=""><span></span></a>
                    <div style="text-align: left;" class="sh_wp_note">
                        <h5 style="margin: 10px 0px;">Tips : </h5>
                       	<p> 1) Usa *texto* para texto bold.</p>
                        <p> 2) Usa _texto_ para texto italic.</p>
                        <p> 3) Usa %0A Antes o despues para agregar linea en blanco.</p>
                        <p> 4) usa %20 Antes o despues para forzr espacio.</p>
                        <p> 5) Desde tu usuario puedes agregar una firma.</p>
                    </div>
                </div>
                <footer class="footer">
                    <div class="button confirm" t-on-click="confirm">
                        <t t-esc="props.confirmText" />
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText" />
                    </div>
                </footer>
            </div>
        </div>
    </t>

    <t t-extend="ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('print')]" position="after">
            <t t-if="env.pos.config.enable_whatsapp and env.pos.get_order().get_client() and env.pos.get_order().get_client().mobile">
                <div class="button send_wp" t-on-click="trigger('click-send_wp')" style="margin-left: 5px;"><i class="fa fa-whatsapp"></i> Enviar Whatsapp</div>
                <div class="button send_wp_direct" t-on-click="trigger('click-send_wp_dierct')" style="margin-left: 5px;"><i class="fa fa-whatsapp"></i> Envia Whatsapp directo</div>
            </t>
        </xpath>
    </t>
</templates>
