                	<tr t-att-id="pos_order.pos_reference.split(' ')[1]" class="order_data_row order_data_header">
	                    <th>Product</th>
	                    <th>Qty.</th>
	                    <t t-if="pos_order.return_status != 'nothing_return'">
	                        <th>Return Quantity</th>
	                    </t>
	                    <th>Discount (%)</th>
	                    <th>Note</th>
	                    <th>Unit Price</th>
	                    <th>Sub Total</th>
	                </tr>
                </thead>
