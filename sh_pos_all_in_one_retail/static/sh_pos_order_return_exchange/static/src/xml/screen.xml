            <table class="inner_data_table counter_table_below">
				<tr t-att-id="pos_order.pos_reference.split(' ')[1]" class="order_data_row order_data_header">
					<t t-if="pos_order.total_item">
						<td class="total_item_label">
							<b>Total Items : </b>
						</td>
						<td class="total_item_number">
							<t t-esc="pos_order.total_item" />
						</td>
					</t>
					<t t-if="pos_order.total_qty">
						<td class="total_qty_label">
							<b>Total Qty : </b>
						</td>
						<td class="total_qty_number">
							<t t-esc="pos_order.total_qty" />
						</td>
					</t>
				</tr>
			</table>
        </xpath>
    </t>

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('back')]" position="after">
            <t t-if="env.pos.get_order().return_order">
                <div class="button cancel" t-on-click="cancel_return_order">
                    <span class="back_text">Cancel</span>
                </div>
            </t>
        </xpath>
    </t>
</templates>
